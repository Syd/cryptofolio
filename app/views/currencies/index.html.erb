<p id="notice"><%= notice %></p>

<h1>Currencies</h1>

<table>
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Price btc</th>
      <th>Name</th>
      <th>Price usd</th>
      <th>Change 1h</th>
      <th>Change 24h</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @currencies.each do |currency| %>
      <tr>
        <td><%= currency.symbol %></td>
        <td><%= currency.price_btc %></td>
        <td><%= currency.name %></td>
        <td><%= currency.price_usd %></td>
        <td><%= currency.change_1h %></td>
        <td><%= currency.change_24h %></td>
        <td><%= link_to 'Show', currency %></td>
        <td><%= link_to 'Edit', edit_currency_path(currency) %></td>
        <td><%= link_to 'Destroy', currency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Currency', new_currency_path %>
